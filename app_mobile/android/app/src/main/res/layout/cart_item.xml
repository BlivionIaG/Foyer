<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4"
        android:id="@+id/quantity"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_alignBottom="@+id/button_ret"
        android:layout_toLeftOf="@+id/button_add"
        android:layout_toStartOf="@+id/button_add" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="-"
        android:id="@+id/button_ret"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/quantity"
        android:layout_toStartOf="@+id/quantity" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="+"
        android:id="@+id/button_add"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/name"
        android:layout_alignTop="@+id/quantity"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_item_price"
        android:id="@+id/price"
        android:layout_below="@+id/button_ret"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/button_ret"
        android:layout_alignStart="@+id/button_ret" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/price_value"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/price"
        android:layout_toRightOf="@+id/price"
        android:layout_toEndOf="@+id/price" />
</RelativeLayout>